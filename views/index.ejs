<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
    <style>
        .chart-container {
            max-width: 80%; 
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <div class="chart-container">
        <h1 style="text-align: center;"><%= title %></h1>
        <canvas id="barChart" width="400" height="200"></canvas>
    </div>
    
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const ctx = document.getElementById('barChart').getContext('2d');
            
            const fixedColors = ['red', 'green', 'blue', 'yellow'];
            
            const data = {
                labels: <%- JSON.stringify(expensesData.map(item => Object.keys(item)[0])) %>,
                datasets: [{
                    label: 'Expenses',
                    data: <%- JSON.stringify(expensesData.map(item => Object.values(item)[0])) %>,
                    backgroundColor: fixedColors,
                    borderColor: fixedColors, 
                    borderWidth: 1
                }]
            };
            const config = {
                type: 'bar',
                data: data,
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            };
            new Chart(ctx, config);
        });
    </script>
</body>
</html>
